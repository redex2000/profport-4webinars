= form_for(competences_path, method: :get, html: { id: 'competences-search-form', role: 'form', class: 'form-inline' }, remote: true ) do
  div.form-group
    = text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Введите название компетенции'
    = button_tag '', class: 'glyphicon glyphicon-search', title: 'Поиск по компетенции'